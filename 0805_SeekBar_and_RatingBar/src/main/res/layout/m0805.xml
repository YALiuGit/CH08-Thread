<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Silver"
    android:padding="@dimen/pa01"
    tools:context=".M0805">

    <SeekBar
        android:id="@+id/m0805_SeekBar"
        style="@android:style/Widget.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="20"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp" />

    <TextView
        android:id="@+id/m0805_t001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/m0805_RatBar1"
        android:textColor="@color/Navy"
        android:textSize="@dimen/fontsize20"
        app:layout_constraintStart_toStartOf="@id/m0805_SeekBar"
        app:layout_constraintTop_toTopOf="@id/m0805_SeekBar" />

    <RatingBar
        android:id="@+id/m0805_RatBar"
        style="@android:style/Widget.RatingBar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:alpha="1"
        android:numStars="5"
        android:rating="3.5"
        android:stateListAnimator="@android:anim/fade_out"
        android:stepSize="0.5"
        android:theme="@style/StarBar"
        app:layout_constraintTop_toBottomOf="@+id/m0805_t001"
        tools:layout_editor_absoluteX="20dp" />

    <TextView
        android:id="@+id/m0805_Rat01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/m0805_RatBar1"
        android:textColor="@color/Navy"
        android:textSize="@dimen/fontsize20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m0805_RatBar" />

    <TextView
        android:id="@+id/m0805_Rat02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/m0805_RatBar2"
        android:textColor="@color/Navy"
        android:textSize="@dimen/fontsize20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m0805_Rat01" />

    <Button
        android:id="@+id/m0805_b001"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/pa01"
        android:background="@color/Red"
        android:text="@string/m0805_b001"
        android:textSize="@dimen/fontsize20"
        app:layout_constraintTop_toBottomOf="@+id/m0805_Rat02"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/m0805_b002"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="24dp"
        android:background="@color/Yellow"
        android:text="@string/m0805_b002"
        android:textSize="@dimen/fontsize20"
        app:layout_constraintStart_toEndOf="@id/m0805_b001"
        app:layout_constraintTop_toTopOf="@+id/m0805_b001" />

    <TextView
        android:id="@+id/myname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/myname"
        android:textColor="@color/Blue"
        android:textSize="@dimen/fontsize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>